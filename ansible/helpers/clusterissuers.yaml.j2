apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: prod-issuer
  namespace: cert-manager
spec:
  acme:
    email: {{ cluster_config.cert_manager_email }}
    server: https://acme-v02.api.letsencrypt.org/directory # Letsencrypt Production
    privateKeySecretRef:
      name: acme-issuer-account-key
    solvers:
    - dns01:
        cloudflare:
          email: {{ cluster_config.cert_manager_email }}
          apiKeySecretRef:
            name: cloudflare-api-key-secret
            key: api-key
---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: staging-issuer
  namespace: cert-manager
spec:
  acme:
    email: {{ cluster_config.cert_manager_email }}
    server: https://acme-staging-v02.api.letsencrypt.org/directory # Letsencrypt Staging
    privateKeySecretRef:
      name: acme-issuer-account-key
    solvers:
    - dns01:
        cloudflare:
          email: {{ cluster_config.cert_manager_email }}
          apiKeySecretRef:
            name: cloudflare-api-key-secret
            key: api-key