[all:vars]
cluster_name={{ cluster_name }}

[kube_api_servers]
{% for i in range(cluster_config.node_classes.apiserver.count) %}
{{ cluster_config.host_networking.cluster_subnet }}.{{ cluster_config.node_classes.apiserver.start_ip + i }} labels="{% for key, value in cluster_config.node_classes.apiserver.labels.items() %}{{ key }}={{ value }}{% if not loop.last %},{% endif %}{% endfor %}" hostname={{ cluster_config.cluster_name }}-apiserver-{{ i }}
{% endfor %}

[kube_etcd_servers]
{% for i in range(cluster_config.node_classes.etcd.count) %}
{{ cluster_config.host_networking.cluster_subnet }}.{{ cluster_config.node_classes.etcd.start_ip + i }} etcd_index={{ i }} labels="" hostname={{ cluster_config.cluster_name }}-etcd-{{ i }}
{% endfor %}

