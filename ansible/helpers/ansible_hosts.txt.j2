{% for i in range(cluster_config.node_classes.etcd.count) %}
{{ cluster_config.cluster_subnet }}.{{ cluster_config.node_classes.etcd.start_ip + i }} etcd_index={{ i }} labels="" hostname={{ cluster_config.cluster_name }}-etcd-{{ i }}
{% endfor %}

