[all:vars]
cluster_name={{ cluster_name }}

[kube_api_servers]
{% for i in range(cluster_config.node_classes.apiserver.count) %}
{{ cluster_config.cluster_subnet }}.{{ cluster_config.node_classes.apiserver.start_ip + i }} cp_index={{ i }} labels="{% for key, value in cluster_config.node_classes.apiserver.labels.items() %}{{ key }}={{ value }}{% if not loop.last %},{% endif %}{% endfor %}" hostname={{ cluster_config.cluster_name }}-apiserver-{{ i }}
{% endfor %}

